<div class="rentals">
	<form {{on "input" this.updateQuery}} {{on "submit" this.handleSubmit}}>
		<label>
			<span>Where would you like to stay?</span>
			<input name="search-house" class="light">
		</label>
	</form>

	<ul class="results">
		{{!-- <p>{{this.query}}</p> --}}
		<Rentals::Filters @rentals={{@rentals}} @query={{this.query}} as |banana| >		
		{{#each banana as |rental|}}
		<li>
			<Rental @rental={{rental}} />
		</li>
		{{/each}}
		</Rentals::Filters>
	</ul>
</div>